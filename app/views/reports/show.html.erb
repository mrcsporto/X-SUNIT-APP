<%- model_class = Report -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:reporter_id) %>:</strong></dt>
  <dd><%= @report.reporter_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reported_id) %>:</strong></dt>
  <dd><%= @report.reported_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reported_name) %>:</strong></dt>
  <dd><%= @report.reported_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reports_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_report_path(@report), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              report_path(@report),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
