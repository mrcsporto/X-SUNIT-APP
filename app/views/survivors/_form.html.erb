<%= form_for @survivor, :html => { :class => "form-horizontal survivor" } do |f| %>

  <% if @survivor.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@survivor.errors.count, "error") %> prohibited this survivor from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @survivor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :age, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.number_field :age, :class => 'form-control' %>
    </div>
    <%=f.error_span(:age) %>
  </div>
  <div class="form-group">
    <%= f.label :gender, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= select("survivor", "gender",["Female", "Male"], {:include_blank => "Select"}, {:class => "form-control"}) %>
    </div>
    <%=f.error_span(:gender) %>
  </div>
  <div class="form-group">
    <%= f.label :latitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :latitude, :class => 'form-control' %>
    </div>
    <%=f.error_span(:latitude) %>
  </div>
  <div class="form-group">
    <%= f.label :longitude, :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field  :longitude, :class => 'form-control'%>
    </div>
    <%=f.error_span(:longitude) %>
  </div>
  <div class="form-group">
    <%= f.label :abducted, :class => 'control-label col-lg-2' %>
    
    <div class="col-xs-1">
      <%= f.check_box :abducted, :class => 'form-control' %>
    </div>
    <%=f.error_span(:abducted) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                survivors_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
